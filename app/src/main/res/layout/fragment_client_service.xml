<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/main_layout"
	android:background="@color/bg_gray"
	>
	<LinearLayout
		android:id="@+id/camera1"
		android:layout_width="match_parent"
		android:layout_height="250dp"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:background="@color/bg_light_gray"
		>
		<com.google.android.gms.maps.MapView
			android:id="@+id/fragment_embedded_map_view_mapview"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		</LinearLayout>

    <TextView
	    android:id="@+id/service_info"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="16dp"
		android:orientation="horizontal"
		android:textStyle="bold"
		android:layout_gravity="center_horizontal"
		android:textSize="@dimen/default_text_address_size_sp"
		android:textColor="@color/btn_bouns_title"
	    android:text="@string/service_info"
	/>

    <LinearLayout
        android:id="@+id/camera1_linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal"
		>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
		<ImageButton
			android:id="@+id/normal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="middle"
			android:singleLine="true"
			android:background="@color/transparent"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/ic_maps_local_taxi"
			/>
			<TextView
				android:id="@+id/txt_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:text="@string/service_taxi"
				android:layout_gravity="center_horizontal"
				android:textColor="@color/btn_bouns_title"
				/>
			</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
			<ImageButton
				android:id="@+id/uber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:singleLine="true"
				android:background="@color/transparent"
				android:layout_gravity="center_horizontal"
				android:src="@drawable/ic_notification_drive_eta"
				/>
			<TextView
				android:id="@+id/txt_uber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:text="@string/service_uber"
				android:layout_gravity="center_horizontal"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
		<ImageButton
			android:id="@+id/truck"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="middle"
			android:singleLine="true"
			android:layout_gravity="center_horizontal"
			android:background="@color/transparent"
			android:src="@drawable/ic_maps_local_shipping"
			/>
			<TextView
				android:id="@+id/txt_truck"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:textStyle="bold"
				android:layout_gravity="center_horizontal"
				android:text="@string/service_truck"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
		<ImageButton
			android:id="@+id/dock"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="middle"
			android:singleLine="true"
			android:layout_gravity="center_horizontal"
			android:background="@color/transparent"
			android:src="@drawable/ic_maps_directions_ferry"
			/>
			<TextView
				android:id="@+id/txt_dock"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:textStyle="bold"
				android:layout_gravity="center_horizontal"
				android:text="@string/service_big_truck"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
			<ImageButton
				android:id="@+id/trailer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:singleLine="true"
				android:layout_gravity="center_horizontal"
				android:background="@color/transparent"
				android:src="@drawable/ic_maps_directions_bus"
				/>
			<TextView
				android:id="@+id/txt_trailer"
				android:layout_width="wrap_content"

				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:textStyle="bold"
				android:layout_gravity="center_horizontal"
				android:text="@string/service_big_trailer"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
    </LinearLayout>
	<LinearLayout
		android:id="@+id/taxi_linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:visibility="gone"
		>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="20dp"
			android:orientation="vertical"
			android:id="@+id/taxi_take_ride_linearLayout"
			>
			<ImageButton
				android:id="@+id/taxi_normal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:singleLine="true"
				android:background="@color/transparent"
				android:src="@drawable/ic_maps_local_taxi"
				/>
			<TextView
				android:id="@+id/txt_taxi_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:text="@string/service_take"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="20dp"
			android:orientation="vertical"
			android:id="@+id/taxi_send_merchandise_linearLayout"
			>
			<ImageButton
				android:id="@+id/taxi_truck"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:singleLine="true"
				android:background="@color/transparent"
				android:src="@drawable/ic_maps_local_shipping"
				/>
			<TextView
				android:id="@+id/txt_taxi_truck"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:textStyle="bold"
				android:text="@string/service_send_merchandise"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="20dp"
			android:orientation="vertical"
			android:id="@+id/taxi_send_pick_train_linearLayout"
			>

			<ImageButton
				android:id="@+id/train"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:singleLine="true"
				android:background="@color/transparent"
				android:src="@drawable/ic_maps_directions_subway"
				/>
			<TextView
				android:id="@+id/txt_train"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:textStyle="bold"
				android:text="@string/service_pick_up_train"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="20dp"
			android:orientation="vertical"
			android:id="@+id/taxi_send_pick_airport_linearLayout"
			>
			<ImageButton
				android:id="@+id/airplane"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:singleLine="true"
				android:background="@color/transparent"
				android:src="@drawable/ic_maps_local_airport"
				/>
			<TextView
				android:id="@+id/txt_airplane"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="middle"
				android:textStyle="bold"
				android:text="@string/service_pick_up_airplane"
				android:textColor="@color/btn_bouns_title"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>