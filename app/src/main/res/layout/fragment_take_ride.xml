<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:paddingBottom="20dp"
>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="@dimen/default_text_address_size_sp"
        android:textStyle="bold"
        android:text="@string/txt_take_ride"
        android:textColor="@color/btn_bouns_title"
        />
            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >
                <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:paddingTop="20dp"
                 >
                 <TextView
                     android:id="@+id/type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:ellipsize="middle"
                     android:singleLine="true"
                     android:paddingLeft="20dp"
                     android:layout_gravity="center_vertical"
                     android:text="@string/txt_take_type"
                     android:textColor="@color/btn_bouns_title"
                     />
                    <RadioGroup
                        android:id="@+id/source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/real_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/address_devicename_txt"
                            android:checked="true"
                            android:text="@string/txt_take_real_time" />

                        <RadioButton
                            android:id="@+id/reservation_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bg_gray"
                            android:text="@string/txt_take_reservation" />
                    </RadioGroup>
             </LinearLayout>
                <LinearLayout
                    android:id="@+id/date_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/txt_take_date"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <EditText
                        android:id="@+id/date_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:text=""

                        />
                    <ImageButton
                        android:id="@+id/date_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_arrowdown"
                        />
                </LinearLayout>
                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:text="@string/txt_take_time"
                    android:textColor="@color/btn_bouns_title"
                    />
                <EditText
                    android:id="@+id/time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:layout_weight="2"
                    android:text=""

                    />
                <ImageButton
                    android:id="@+id/time_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_arrowdown"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/taxi_take_ride_departure_linearLayout"
                    >
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/txt_take_departure"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <EditText
                        android:id="@+id/departure_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:text="新竹火車站"

                        />
                    <ImageButton
                        android:id="@+id/departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_device_gps_fixed"
                        />
                 </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/train_take_ride_departure_linearLayout"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/train_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/txt_take_departure"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <RadioGroup
                        android:id="@+id/departure_train"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/departure_tra_train"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/address_devicename_txt"
                            android:text="@string/pick_up_tra_train" />

                        <RadioButton
                            android:id="@+id/departure_thsr_train"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bg_gray"
                            android:checked="true"
                            android:text="@string/pick_up_thsr_train" />
                    </RadioGroup>
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/train_take_ride_departure_station_linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/departure_location_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/pick_up_train"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <Spinner android:id="@+id/train_departure_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:drawSelectorOnTop="true"
                        />
                    <ImageButton
                        android:id="@+id/train_departure_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_arrowdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/stopby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/txt_take_stopby"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:id="@+id/stop_address"
                        android:text=""

                        />
                    <ImageButton
                        android:id="@+id/stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_content_remove_circle_outline"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/taxi_take_ride_destination_linearLayout"
                    >
                    <TextView
                        android:id="@+id/txt_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/txt_take_destination"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <EditText
                        android:id="@+id/destination_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:text=""

                        />
                    <ImageButton
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_image_control_point"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/train_take_ride_destination_linearLayout"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/txt_take_destination"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <RadioGroup
                        android:id="@+id/destination_train"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/destination_tra_train"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/address_devicename_txt"
                            android:text="@string/pick_up_tra_train" />

                        <RadioButton
                            android:id="@+id/destination_thsr_train"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bg_gray"
                            android:checked="true"
                            android:text="@string/pick_up_thsr_train" />
                    </RadioGroup>
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/train_take_ride_destination_station_linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/destination_location_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/pick_up_train"
                        android:textColor="@color/btn_bouns_title"
                        />
                    <Spinner android:id="@+id/train_destination_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:drawSelectorOnTop="true"
                        />
                    <ImageButton
                        android:id="@+id/train_des_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_arrowdown"
                        />
                </LinearLayout>
            </LinearLayout>

    <LinearLayout
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/info"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/spec_require"
            >
            <TextView
                android:id="@+id/passenger_spec"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="@string/merchandise_requirement"
                android:textColor="@color/btn_bouns_title"
                />
            <!-- <TextView
                android:id="@+id/passenger_spec_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1"
                android:text=""/> -->
            <EditText
                android:id="@+id/passenger_spec_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textSize="@dimen/default_text_address_host_size_sp"
                android:layout_weight="1"
                android:text=""/>

            <ImageButton
                android:id="@+id/spec_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:src="@drawable/ic_arrowdown"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:text="@string/merchandise_spec"
                android:textColor="@color/btn_bouns_title"
                />
            <EditText
                android:id="@+id/spec_info"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:ellipsize="end"
                android:paddingLeft="20dp"
                android:textSize="@dimen/default_text_address_size_sp"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textColor="@color/address_devicename_txt"
                />
        </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:id="@+id/merchandise_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/change"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/merchandise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:text="@string/merchandise_content"
                android:textColor="@color/btn_bouns_title"
                />
            <EditText
                android:id="@+id/merchandise_content_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_weight="2"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/merchandise_weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:text="@string/merchandise_weight"
                android:textColor="@color/btn_bouns_title"
                />
            <EditText
                android:id="@+id/merchandise_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_weight="2"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/merchandise_unit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:text="@string/merchandise_unit"
                android:textColor="@color/btn_bouns_title"
                />
            <TextView
                android:id="@+id/merchandise_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_weight="2"
                android:text="0 才"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>