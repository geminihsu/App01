<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/btn_bouns_title"
     >

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:orientation="vertical"
                >

                 <TextView
                     android:id="@+id/send_method"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:ellipsize="middle"
                     android:singleLine="true"
                     android:paddingLeft="20dp"
                     android:text="@string/order_type"
                     android:textColor="@color/btn_bouns_upgrade"
                     />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:text="@string/order_payment"
                    android:textColor="@color/btn_bouns_upgrade"
                    />
                <LinearLayout
                    android:id="@+id/sender"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/order_sender"
                        android:textColor="@color/address_devicename_txt"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:text="鄭明財"
                        android:textColor="@color/address_devicename_txt"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/receiver"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    >
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/order_recevier"
                        android:textColor="@color/address_devicename_txt"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/address_devicename_txt"
                        android:text="林添財"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/order_departure_info"
                        android:textColor="@color/address_devicename_txt"
                        />
                    <TextView
                        android:id="@+id/txt_from"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/address_devicename_txt"
                        android:text="台中市台灣大道一段1號kokpopkopoppppp"


                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/stop_information"
                    >
                    <TextView
                        android:id="@+id/stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/order_stop_info"
                        android:textColor="@color/address_devicename_txt"
                        />
                    <TextView
                        android:id="@+id/txt_stop"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/address_devicename_txt"
                        android:text=""


                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:text="@string/order_destination_info"
                        android:textColor="@color/address_devicename_txt"
                        />
                    <TextView
                        android:id="@+id/txt_dest"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/address_devicename_txt"
                        android:text="台中市政府"


                        />
                </LinearLayout>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/order_date"
                        android:textColor="@color/address_devicename_txt"
                        />
            </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_merchandise"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/info"
        android:gravity="right"
        android:layout_above="@+id/control_pannel"
        android:background="@color/white"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_communication_call"
            android:background="@color/transparent"
            android:textColor="@color/red"
            android:text="123"
            />
        <TextView
            android:id="@+id/txt_call_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:text="@string/call_sender"
            android:textColor="@color/address_devicename_txt"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_communication_call"
            android:background="@color/transparent"
            android:textColor="@color/red"
            android:text="123"
            />
        <TextView
            android:id="@+id/txt_call_recevier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:text="@string/call_recevier"
            android:textColor="@color/address_devicename_txt"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_client"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/info"
        android:gravity="right"
        android:visibility="gone"
        android:layout_above="@+id/control_pannel"
        android:background="@color/white"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_communication_call"
            android:background="@color/transparent"
            android:textColor="@color/red"
            android:id="@+id/call"
            android:text="123"
            />
        <TextView
            android:id="@+id/txt_call_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:text="@string/call_client"
            android:textColor="@color/address_devicename_txt"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/control_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:paddingTop="30dp"
        android:background="@color/btn_bouns_title"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:src="@drawable/ic_action_search"
            android:text="@string/car_work_licence"
            android:textColor="@color/address_devicename_txt"
            />
        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="@string/order_information"
            android:textColor="@color/white"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:src="@drawable/ic_image_adjust"
                android:text="@string/car_work_licence"
                android:textColor="@color/address_devicename_txt"
                />
            <TextView
                android:id="@+id/txt_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/navigation_to_departure"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_price"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/order_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:src="@drawable/ic_image_edit"
                android:text="@string/car_work_licence"
                android:textColor="@color/address_devicename_txt"
                />
            <TextView
                android:id="@+id/txt_order_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/change_order_price"
                android:textColor="@color/white"
                />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/navigation_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:src="@drawable/ic_maps_place"
                    android:text="@string/car_work_licence"
                    android:textColor="@color/address_devicename_txt"
                    />
                <TextView
                    android:id="@+id/txt_navigation_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="@string/navigation_to_destination"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/passeger_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:src="@drawable/ic_maps_directions_car"
                    android:text="@string/car_work_licence"
                    android:textColor="@color/address_devicename_txt"
                    />
                <TextView
                    android:id="@+id/txt_passeger_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="@string/passeger_get_car"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/order_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:src="@drawable/ic_action_verified_user"
                    android:text="@string/car_work_licence"
                    android:textColor="@color/address_devicename_txt"
                    />
                <TextView
                    android:id="@+id/txt_order_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="@string/finish_order"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/order_online_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:src="@drawable/ic_maps_local_atm"
                    android:text="@string/car_work_licence"
                    android:textColor="@color/address_devicename_txt"
                    />
                <TextView
                    android:id="@+id/txt_order_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="@string/order_online_payment"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/online_check_price"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/order_online_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:src="@drawable/ic_action_receipt"
                    android:text="@string/car_work_licence"
                    android:textColor="@color/address_devicename_txt"
                    />
                <TextView
                    android:id="@+id/txt_online_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="@string/order_online_signature"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_pannel_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/order_pannel_info"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>