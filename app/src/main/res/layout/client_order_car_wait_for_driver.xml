<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    >


    <TextView
        android:id="@+id/txt_forget_password"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/default_text_address_size_sp"
        android:text="@string/txt_wait"
        android:textColor="@color/btn_bouns_title"
        android:linksClickable="true"
        />


    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txt_forget_password"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >
            <ImageView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_image_camera_alt"
                android:text="@string/login_id_title"
               />
            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/name"
                android:paddingBottom="20dp"
                >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="黃師傅"
                android:textSize="@dimen/default_text_size_sp"
                android:textColor="@color/btn_bouns_title"
                />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/txt_car_type"
                    android:textSize="@dimen/default_text_address_info_size_sp"
                    android:textColor="@color/btn_bouns_title"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/txt_car_brand"
                    android:textSize="@dimen/default_text_address_info_size_sp"
                    android:textColor="@color/btn_bouns_title"
                    />
            </LinearLayout>
            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:layout_toRightOf="@+id/profile"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                />
            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_communication_call"
                android:text="@string/login_id_title"
                />
        </RelativeLayout>
        <View
            android:id="@+id/titleDivider"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="@string/txt_car_distance"
                android:textSize="@dimen/default_text_address_size_sp"
                android:textColor="@color/address_devicename_txt"
                />
            <Button
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/default_text_address_size_sp"
                android:background="@color/btn_bouns_title"
                android:text="@string/txt_car_location"

                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/fee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_light_gray"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/info"
        android:text="@string/txt_car_fee"
        android:textColor="@color/address_devicename_txt"
        />
    <TextView
        android:id="@+id/pay_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fee"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_car_payment"
        android:textSize="@dimen/default_text_size_sp"
        android:textColor="@color/btn_bouns_upgrade"
        />
        <LinearLayout
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/pay_method"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="20dp"
            >

            <Button
                android:id="@+id/share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_car_share"
                android:background="@color/btn_bouns_record"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_sp"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_car_online"
                android:background="@color/btn_bouns_record"
                android:textSize="@dimen/default_text_size_sp"
                android:textColor="@color/white"
                />
        </LinearLayout>



</RelativeLayout>